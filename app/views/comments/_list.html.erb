<table>
  <% review.comments.each do |comment| %>
    <tr>
      <td>
      <%= "　:" + comment.user.name %>
      </td>
      <td>
      <%= "　:" + comment.body %>
      </td>
      <td>
      <%= comment.created_at.strftime('%Y/%m/%d') %>
      </td>
      <td>
      <% if comment.user == current_user %>
        <%= link_to "コメントを削除", review_comment_path(review,comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",remote: true %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>