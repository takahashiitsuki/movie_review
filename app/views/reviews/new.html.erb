<div class="container">
  レビュー投稿
  <table class="table">
    <tr>
      <td>
        投稿者
      </td>
      <td>
        <%= current_user.name %>
      </td>
    </tr>
    <tr>
      <td>
        映画
      </td>
      <td>
        <h3><%= @movie['table']['title'] %></h3>
      </td>
    </tr>
    <%= form_with model: @review do |f| %>
    <tr>
      <td>
        レビュータイトル
      </td>
      <td>
        <%= f.text_field :title %>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.label :star,'評価 '%>
      </td>
      <td>
        <div class="form_group" id="star">
    <%= f.hidden_field :star, id: :review_star, :value => 'score' %>
    </div>
      </td>

    </tr>
  </table>
  <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.hidden_field :movie_id, value: @movie['table']['id'] %>
  <%= f.submit '投稿' %>
  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',


    half: false,
    scoreName: 'review[star]',
    
    click: function(score) {
    alert(score);
    $("#review_star").val(score);
  }
  });
  </script>
  <% end %>

</div>