<div class="container">
  レビュー詳細
  <table class="table">
    <tr>
      <td>
        レビュータイトル
      </td>
      <td>
        <%= @review.title %>
      </td>
    </tr>
    <tr>
      <td>
        投稿者
      </td>
      <td>
        <%= @review.user.name %>
      </td>
    </tr>
    <tr>
      <td>
        映画
      </td>
      <td>
        <%= link_to @movie['table']['title'],movie_path(@movie['table']['id']) %>
      </td>
    </tr>
    <tr>
      <td>
        評価
      </td>
      <td>
        <div id="star-rate"></div>
        <script>
      $('#star-rate').raty({
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= @review.star %>,
      });
    </script>
      </td>
    </tr>
  </table>
  レビュー内容<br>
  <%= @review.body %>

  <div>
    <table>
  <% @review.comments.each do |comment| %>
    <tr>
      <td>
      <%= comment.body %>
      </td>
      <td>
      <%= comment.user.name %>
      </td>
      <td>
      <% if comment.user == current_user %>
        <%= link_to "Destroy", review_comment_path(comment.review, comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger",remote: true %>
      <% end %>
      </td>
    </tr>
  <% end %>
  </table>
</div>

<div>
  <% if user_signed_in?  %>
    <%= form_with model: [@review, @comment] do |f| %>
      コメント<br>
      <%= f.text_area :body %><br>
      <%= f.submit "送信" %>
    <% end %>
  <% end %>
</div>
<% if current_user == @review.user %>
    <%= link_to '編集', edit_review_path, class: 'btn btn-success' %>
    <%= link_to '削除', review_path,method: :delete, class: 'btn btn-danger' %>
  <% end %>
</div>


