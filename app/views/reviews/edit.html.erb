<div class="container">
  レビュー編集
  <table class="table">
    <tr>
      <td>
        レビュータイトル
      </td>
      <td>
        <%= @review.title %>
      </td>
    </tr>
    <tr>
      <td>
        投稿者
      </td>
      <td>
        <%= @review.user.name %>
      </td>
    </tr>
    <tr>
      <td>
        映画
      </td>
      <td>
        <%= link_to @movie['table']['title'],movie_path(@movie['table']['id']) %>
      </td>
    </tr>
    <%= form_with model: @review,url: admin_user_path(@review.id), method: "patch" do |f| %>
    <tr>
      <td>
        評価
      </td>
      <td>
        <div id="star<%= @review.id%>"></div>
        <%= f.hidden_field :star, id: :review_star, :value => 'score' %>
        <script>
      $('#star<%= @review.id%>').raty({
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= @review.star %>,
        scoreName: 'review[star]',
    
        click: function(score) {
        alert(score);
        $("#review_star").val(score);
      });
    </script>
      </td>
    </tr>
  </table>
  レビュー内容<br>
  <%= f.text_area :body %>
  <%= f.submit "レシピを公開", :name => 'publicize_draft', class:'mr-5 btn btn-sm btn-warning' %>
    <% if @review.is_draft == true %>
      <%= f.submit "下書きを更新", :name => 'update_draft', class:'mr-5 btn btn-sm btn-outline-secondary' %>
    <% end %>
  <% end %>
  レビュー削除
  <%= link_to '削除する', review_path(@review), method: :destroy, class="btn btn-danger btn-lg" %>
</div>