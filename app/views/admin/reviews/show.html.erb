<div class="container">
  レビュー詳細
  <table class="table">
    <tr>
      <td>
        レビュータイトル
      </td>
      <td>
        <%= @review.title %>
      </td>
    </tr>
    <tr>
      <td>
        投稿者
      </td>
      <td>
        <%= @review.user.name %>
      </td>
    </tr>
    <tr>
      <td>
        映画
      </td>
      <td>
        <%= link_to @movie['table']['title'],admin_movie_path(@movie['table']['id']) %>
      </td>
    </tr>
    <tr>
      <td>
        評価
      </td>
      <td>
        <div id="star-rate<%= @review.id%>"></div>
        <script>
      $('#star-rate<%= @review.id%>').raty({
        size      : 36,
        starOff   : '<%= asset_path('star-off.png') %>',
        starOn    : '<%= asset_path('star-on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= @review.star %>,
      });
    </script>
      </td>
    </tr>
    <tr>
      <td>
        タグ
      </td>
      <td>
        <% @reviewtags.each do |reviewtag| %>
          <%= link_to ":" + reviewtag.tag.name + "　",reviews_path(range: "タグ", looking_for: reviewtag.tag.name) %>
        <% end %>
      </td>
    </tr>
  </table>
  レビュー内容<br>
  <%= @review.body %><br>
  
  <div class = "comment_list">
    <%= render 'comments/list', review: @review %>
  </div>
  
  <%= link_to '削除', admin_review_path(@review.id),method: :delete, class: 'btn btn-danger' %>
</div>