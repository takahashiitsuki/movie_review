<div class = "container">
    <h1>映画検索</h1>
    <div>
        <%= form_with url: admin_movies_path, local: true, method: :get do |f| %>
            <%= f.text_field :looking_for, placeholder: 'Movie Title...' %>
            <%= f.select :genre_id, options_for_select(@genres), { include_blank: "ジャンル" } %>
            <%= f.submit '検索' %>
        <% end %>
    </div>
    <%# 検索された時にコンテンツを表示する %>
    <% if params[:looking_for].present? || params[:genre_id].present? %>
        <h2>
        <% if params[:looking_for].present? %>
            <%= params[:looking_for] + "　" %>
        <% else %>
            <%= "ジャンル"  %>
        <% end %>
        　の検索結果</h2>
    <% else %>
        <%# 検索されていない時にトレンドコンテンツを表示する %>
        <h2>本日の世界のトレンド</h2>
    <% end %>
     =====================
  <% i = 0 %>
  <div class="card-wrapper">
    <% while i < @movie['table']['results'].count %>
    <div class="card">
      <div class="card-upperinfo">
        <%if @movie['table']['results'][i]['table']['title'].present?%>
          <h3><%= link_to @movie['table']['results'][i]['table']['title'],admin_movie_path(@movie['table']['results'][i]['table']['id']) %></h3>
        <%end%>
        <% if @movie['table']['results'][i]['table']['release_date'].present? %>
          <p class="release-date"><%= @movie['table']['results'][i]['table']['release_date'] %></p>
        <%end%>
      </div>
      <div class = "col-lg-3 mx-auto">
        <% if @movie['table']['results'][i]['table']['poster_path'].present? %>
          <p><%= image_tag 'https://image.tmdb.org/t/p/w1280' + @movie['table']['results'][i]['table']['poster_path'],class: "card-img" %></p>
        <%end%>
      </div>
    </div>
    <% i += 1%>
    <%end%>
  </div>
</div>